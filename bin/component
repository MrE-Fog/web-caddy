#!/usr/bin/env node

var argv = process.argv.slice(1)
  , componentHelperDir = findComponentHelper(argv.shift())
  , version = require("../package.json").version
  , fs = require("fs")
  , exec = require("child_process").exec
  , prompt = require("prompt");

function findComponentHelper(currentDir) {
  dir = currentDir.split('/');
  return dir.slice(0,3).join('/') + "/lib/node_modules/gulp-component-helper";
}

var commands = {
  new: function(argv) {
    console.log("Creating your component...");
    prompt.start();
    prompt.get([{
        description: 'Name of component',
        name: 'name'
      }, {
        description: 'Github remote',
        name: 'remote'
    }], function(err, result) {
      fs.mkdirSync(result.name);
      [ "/gulpfile.js",
        "/package.json" ].forEach(function(file) {
        fs.createReadStream(componentHelperDir +"/examples"+ file).pipe(fs.createWriteStream(result.name + file));
      });
      exec("cd "+result.name+" && git init && git remote add origin "+result.remote);
    });
  },
  help: function help () {
    console.log([ "Commands: new, help, version",
                  "Usage: component new",
                ].join("\n"));
  },
  version: function() {
    console.log(version);
  }
};

(function main() {
  if (!argv.length) return commands.help();
  var command = argv.shift();
  commands[command](argv);
})();

