{
    "name": "{{ component }}",
    "version": "0.0.0",
    "description": "Example package.json. Feel free to copy!",
    "main": "src/scripts/{{ component }}.js",
    "repository": {
        "type": "git",
        "url": "{{ git.SSH-URL }}"
    },
    "scripts": {
      "build": "component build",
      "start": "component build && component serve",
      "test": "jshint src && component build && component test",
