      "bump": "component bump",
      "release": "npm test && component release"
    },
    "devDependencies": {
      "browserify-istanbul": "^0.2.1",
      "component-helper" : "^1.2.0",
      "jshint": "^2.6.3"
    },
    "author": "{{ git.author }}"
}
